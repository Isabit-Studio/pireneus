---
# ClangFormat configuration based on id Software coding style
# Inspired by id Software coding conventions

# Based on LLVM style with specific modifications
BasedOnStyle: LLVM

# Indentation - Use real tabs equal to 4 spaces
UseTab: Never
TabWidth: 4
IndentWidth: 4

# Braces - "Trailing braces" style everywhere
BreakBeforeBraces: Attach
AllowShortIfStatementsOnASingleLine: false
AllowShortFunctionsOnASingleLine: None
AllowShortEnumsOnASingleLine: false
AllowShortBlocksOnASingleLine: Never

# Spacing - Spaces around parenthesized expressions
SpaceBeforeParens: ControlStatements
SpacesInParentheses: true
SpacesInSquareBrackets: false
SpacesInAngles: false
SpaceAfterCStyleCast: false
SpaceBeforeAssignmentOperators: true
SpaceBeforeRangeBasedForLoopColon: true

# Alignment - To create readable columns
AlignConsecutiveAssignments: Consecutive
AlignConsecutiveDeclarations: Consecutive
AlignTrailingComments: true

# Specific indentation
IndentCaseLabels: true
NamespaceIndentation: None
AccessModifierOffset: -4

# Line width
ColumnLimit: 100

# Empty lines
KeepEmptyLinesAtTheStartOfBlocks: false
MaxEmptyLinesToKeep: 1

# Pointer alignment - With the type (idVec3 *)
PointerAlignment: Left
DerivePointerAlignment: false

# Function declarations
AllowAllParametersOfDeclarationOnNextLine: false
BinPackParameters: false
BinPackArguments: false

# Comments and other settings
FixNamespaceComments: true
SortIncludes: true
ReflowComments: true
InsertNewlineAtEOF: true

# Include categories according to id Software conventions
IncludeCategories:
  - Regex: '".*"'       # Local headers in quotes
    Priority: 1
  - Regex: '^<.*\.h>'   # System .h headers
    Priority: 2
  - Regex: '^<.*'       # Other system headers
    Priority: 3

